@model IEnumerable<LibreríaELADIO.Models.Libro>


<h1>Lista de productos</h1>

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <form asp-action="Store">
                    <div class="mt-3 d-flex flex-column">
                        <label for="">Nombre</label>
                        <input type="text" class="form-control" name="Nombre">
                    </div>
                    <div class="mt-3 d-flex flex-column">
                        <label for="">Descripcion</label>
                        <input type="text" class="form-control" name="Descripcion">
                    </div>
                    <div class="mt-3 d-flex flex-column">
                        <label for="">Precio</label>
                        <input type="text" class="form-control" name="Precio">
                    </div>
                    <hr>
                    <button type="submit" class="btn btn-primary w-100">Guardar información</button>
                </form>
            </div>
        </div>

    </div>
    <div class="col-md-9">
        <table class="table">
            <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Precio</th>
                <th>Descripcion</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>@item.IdLibro</td>
                    <td>@item.Titulo</td>
                    <td>@item.Autor</td>
                    <td>@item.Codigo</td>
                    <td>@item.Cantidad</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Details" asp-controller="Producto" asp-route-id="@item.IdLibro">Details</a>
                        <a class="btn alert-danger" asp-action="Delete" asp-controller="Producto" asp-route-id="@item.IdLibro">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
